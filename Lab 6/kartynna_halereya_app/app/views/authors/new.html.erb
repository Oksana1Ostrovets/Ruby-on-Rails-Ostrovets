<h1>Додати нового автора</h1>

<%= form_with model: @author, local: true do |form| %>
  <% if @author.errors.any? %>
    <div class="alert alert-danger">
      <h4>Виникли помилки:</h4>
      <ul>
        <% @author.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name, "Ім'я автора" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :birth_year, "Рік народження" %>
    <%= form.number_field :birth_year, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :country, "Країна" %>
    <%= form.text_field :country, class: "form-control" %>
  </div>

  <%= form.submit "Створити", class: "btn btn-success" %>
<% end %>

<%= link_to "Назад", authors_path, class: "btn btn-secondary mt-3" %>
